<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sist.web.mapper.SeoulMapper">
	<!-- 
		while (rs.next()) {
			SeoulVO vo = new SeoulVO();
			vo.setTitle(rs.getString(1))
			vo.getLvo().setMsg(rs.getString(2))
		}
	 -->
	<resultMap type="com.sist.web.vo.SeoulVO" id="locationMap">
		<result property="lvo.msg" column="msg"/>
		<result property="lvo.restdate" column="restdate"/>
		<result property="lvo.usetime" column="usetime"/>
		<result property="lvo.parking" column="parking"/>
	</resultMap>
	
	<select id="seoulListData" resultType="com.sist.web.vo.SeoulVO" parameterType="hashmap">
		SELECT no,contentid,title,address,image1,hit
		FROM seoultravel
		WHERE contenttype=#{contenttype}
		ORDER BY no ASC
		OFFSET #{start} ROWS FETCH NEXT 12 ROWS ONLY
	</select>
</mapper>